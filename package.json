{
  "name": "typescript_babel_rollup_build_tool",
  "version": "1.0.0",
  "description": "a front-end build tool for native TypeScript apps, using Rollup.js and Babel",
  "scripts": {
    "test": "npm run test",
    "dev": "run-s create-folders copy-assets compile-scss compile-code launch",
    "create-folders": "mkdirp dev/js dev/css dev/img dev/libs dev/webfonts",
    "copy-assets": "run-p copy:* ",
    "copy:html": "cpx src/*.html dev",
    "copy:images": "cpx src/img/**/*.* dev/img",
    "copy:libs": "cpx src/libs/**/*.* dev/libs",
    "copy:webfonts": "cpx src/webfonts/**/*.* dev/webfonts",
    "compile-scss": "node-sass --output-style compressed --source-map true src/scss/app.scss --output dev/css",
    "compile-code": "run-s compile-types compile-js",
    "compile-types": "tsc --build tsconfig-dev.json",
    "compile-js": "rollup -c rollup.config.dev.js",
    "launch": "run-p serve watch:*",
    "serve": "lite-server -c bs-config.json -w 'dev/app.css'",
    "watch": "run-p watch:* ",
    "watch:html": "watch -p \"src/*.html\" -c \"npm run copy:html\" ",
    "watch:scss": "watch -p \"src/scss/**/*.scss\" -c \"npm run compile-scss\" ",
    "watch:img": "watch -p \"src/img/**/*.*\" -c \"npm run copy:images\" ",
    "watch:libs": "watch -p \"src/libs/**/*.*\" -c \"npm run copy:libs\" ",
    "watch:webfonts": "watch -p \"src/webfonts/**/*.*\" -c \"npm run copy:webfonts\" ",
    "watch:ts": "watch -p \"src/ts/**/*.*\" -c \"npm run compile-code\" ",
    "build": "run-s dist:create-folders dist-copy-assets dist:compile-scss dist:compile-code",
    "dist:create-folders": "mkdirp dist/js dist/css dist/img dist/libs dist/webfonts",
    "dist-copy-assets": "run-p dist-copy:* ",
    "dist-copy:html": "cpx src/*.html dist",
    "dist-copy:images": "cpx src/img/**/*.* dist/img",
    "dist-copy:libs": "cpx src/libs/**/*.* dist/libs",
    "dist-copy:webfonts": "cpx src/webfonts/**/*.* dist/webfonts",
    "dist:compile-scss": "node-sass --output-style compressed src/scss/app.scss --output dist/css",
    "dist:compile-code": "run-s dist:compile-types dist:compile-js ",
    "dist:compile-types": "tsc --build tsconfig-dist.json",
    "dist:compile-js": "rollup -c rollup.config.dist.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sean-olson/typescript_rollup_babel_build_tool"
  },
  "keywords": [
    "babel",
    "typescript",
    "build",
    "tool",
    "npm"
  ],
  "author": "Sean Olson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sean-olson/typescript_rollup_babel_build_tool/issues"
  },
  "homepage": "https://github.com/sean-olson/typescript_rollup_babel_build_tool#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "cpx": "^1.5.0",
    "lite-server": "^2.5.4",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.26.3",
    "typescript": "^3.9.7",
    "watch-cli": "^0.2.3"
  }
}
